{
    "extends": "../tsconfig.base.json",
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "../dist",
        "paths": {
            "#lib/*": ["lib/*"],
            "#utils/*": ["lib/util/*"]
        },
        "removeComments": true,
        "rootDir": ".",
        "skipLibCheck": true,
        "tsBuildInfoFile": "../dist/.tsbuildinfo",
        "allowJs": true,
        "composite": true,
        "esModuleInterop": true,
        "typeRoots": [
            "./typings",
            "../node_modules/@types"
        ]
    },
    "include": [".", "./**/*.json"],
    "exclude": ["./tsconfig.json"]
}